<form action="/productos" method="post">
    <div class="row g-3">
        <div class="col">
            <input type="text" class="form-control" placeholder="First name" name="title">
        </div>
        <div class="col">
            <input type="number" class="form-control" placeholder="Last name" name="price">
        </div>
        <div class="col">
            <input type="url" class="form-control" placeholder="url" name="url">
        </div>
        <div class="col">
            <button type="submit" class="btn btn-outline-success">Guardar</button>
        </div>
    </div>
</form>